@page
@model MyWebsite.Pages.Foundation.DisastersModel
@{
}

<header class="header">

    <div class="flex">

        <a href="Homepage.html" class="logo">Disasters<span> Alleviation </span>Foundation</a>

        <nav class="navbar">
            <ul>
                <li><a href="/Foundation/Index">Summaries</a></li>
                <li><a href="/Foundation/Disasters">Disasters</a></li>
                <li><a href="/Foundation/Donations">Donations</a></li>
            </ul>
        </nav>

        <div class="icons">
            <div id="menu-btn" class="fas fa-bars"></div>
            <div id="user-btn" class="fas fa-user"></div>
        </div>

        <div class="account-box">
            <a href="#" class="delete-btn">Logout</a>
        </div>

    </div>

</header>

<section class="heading">
    <h3>Record Disaster</h3>
</section>

<section class="new-disaster">

    <!--form to capture user input-->
    <form method="POST" enctype="multipart/form-data">
        <h3>Disaster Information</h3>
        <input type="text" name="dislocation" class="box" placeholder="Location" required>
        <h4>Start date</h4>
        <input type="text" name="disstart" class="box" required placeholder="Start date">
        <h4>End date</h4>
        <input type="text" name="disend" class="box" placeholder="End date">
        <input type="text" name="disdescription" class="box" placeholder="Description" required>
        <input type="text" name="disaids" class="box" placeholder="Required aid (food, water, etc.)" required>

        @if (Model.successMessage.Length > 0)
        {
            <div class='alert alert-warning alert-dismissable fade show' role='alert'>
                <strong>@Model.successMessage</strong>
                <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
            </div>
        }

        <input type="submit" value="Record" name="add_disaster" class="btn">
    </form>

</section>