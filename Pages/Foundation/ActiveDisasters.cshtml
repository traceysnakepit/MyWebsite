@page
@model MyWebsite.Pages.Foundation.ActiveDisastersModel
@{
}

<header class="header">

    <div class="flex">

        <a href="Homepage.html" class="logo">Disasters<span> Alleviation </span>Foundation</a>

        <nav class="navbar">
            <ul>
                <li><a href="/Foundation/ActiveDisasters">Active Disasters</a></li>
                <li><a href="/Foundation/TotalDonations">Donations Received</a></li>
            </ul>
        </nav>

    </div>

</header>

<section class="heading">
    <h3>Active Disasters Monetary Donations</h3>
</section>

<div class="table-wrapper">
    <table class="fl-table">
        <thead>
            <tr>
                <th>Location</th>
                <th>Amount</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.allMoney)
            {
                <tr>
                    <td>@item.mdlocation</td>
                    <td>@item.mdamount</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<section class="heading">
    <h3>Active Disasters Goods Donations</h3>
</section>

<div class="table-wrapper">
    <table class="fl-table">
        <thead>
            <tr>
                <th>Location</th>
                <th>Type</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.allGoods)
            {
                <tr>
                    <td>@item.gdlocation</td>
                    <td>@item.gdtype</td>
                    <td>@item.gdtotal</td>
                </tr>
            }
        </tbody>
    </table>
</div>